@import 'nib'

//reset start
global-reset()
a
  text-decoration: none
  user-select: none
//reset end

member-title()
  display: block
  font-size: 12px
  color: #fff
  height: 16.7px
  line-height: 16.7px
  padding: 0 8px
  border-radius: 8.35px
  user-select: none

html
  background-color: #fff
  font-family: Helvetica "Droid Sans"

body
  background-color: #fff
  min-width: 320px
  max-width: 640px
  margin: 0 auto

.author
  padding: 13px 13px 0 (13px + 56px + 10px)
  position: relative
  height: (56px)
  .-avatar
    absolute: top 13px left 13px
    width: 56px
    height: 56px
    border-radius: 100%
    overflow: hidden
    img
      width: 100%
      height: 100%
  .-name
    display: block
    float: left
    font-size: 20px
    font-weight: bold
    color: #2b2b2b
    margin-top: 1.3px
    overflow: ellipsis
    max-width: 60%
    line-height: 1.2
  .-level
    display: block
    float: left
    font-family: sans-serif
    font-size: 12px
    color: #00e4ff
    margin-left: 6px
    height: 16.7px
    line-height: 16.7px
    padding: 0 8px
    border: solid #00e4ff 1px
    border-radius: 8.35px
    margin-top: 4.9px
    user-select: none
  .-title
    member-title()
    float: left
    margin-left: 6px
    margin-top: 4.9px
  .-time
    // absolute: top (13px + 26.7px + 8.7px) left (13px + 56px + 10px)
    display: block
    clear: left
    float: left
    margin-top: 6.7px
    font-size: 16px
    color: #858e99
  &::after
    content: ""
    display: block
    clear: both

.unknown-post-type
  p
    padding-top: 56px
    font-size: 20px
    line-height: 1.2
    text-align: center
    color: #858e99
  img
    width: 100%
  @media screen and (max-width: 400px)
    p
      font-size: 18px

.video
  margin: 20px 13px 0 13px
  overflow: hidden
  a
    display: block
    min-height: 100px
    background-color: #ccc
    position: relative
    &::after
      content: ""
      display: block
      height: 100%
      width: 100%
      absolute: top 0 left 0
      background-image: embedurl("play.svg")
      background-size: auto 15%
      background-position: center
      background-repeat: no-repeat
  img
    width: 100%

.text
  margin: 20px 13px 0 13px
  font-size: 20px
  line-height: 1.2
  color: #2b2b2b
  word-break: break-all

.title-box
  border-radius: 4px
  height: 60px
  overflow: hidden
  padding: 0 12px 0 (60px + 12px)
  position: relative
  background-image: embedurl("box.svg")
  background-position: 60px 0
  background-repeat: no-repeat
  background-size: 100%
  &::before
    content: ''
    display: block
    width: 60px
    height: 60px
    background-repeat: no-repeat
    background-size: 100%
    background-position: center
    absolute: top 0 left 0
  h3
    margin-top: 10px
    font-size: 20px
    color: #2b2b2b
    line-height: 1.2
    overflow: ellipsis
    &:last-child
      margin-top: 0
      height: 60px
      line-height: 60px
      vertical-align: middle
  i, span
    display: inline-block
    margin-top: 4px
    font-size: 12px
    line-height: 1.2
    overflow: ellipsis
    font-style: normal
  i
    margin-right: 8px
    max-width: 70%
  span
    color: #858e99
    line-height: 1.2
    max-width: 30%

.link
  margin: 20px 13px 0 13px
  .title-box::before
    background-image: embedurl('link.svg')

.voting
  margin: 20px 13px 0 13px
  .title-box::before
    background-image: embedurl('voting.svg')
  ol
    list-style: none
  li
    font-size: 20px
    margin-top: 18px
    color: #2b2b2b
    input[type="checkbox"]
      display: none
    label
      display: block
      line-height: 26px
      height: 26px
      vertical-align: middle
      &::before
        content: ''
        display: inline-block
        vertical-align: middle
        margin: 0 17px
        width: 24px
        height: 24px
        background-color: #f4f6f8
        border: solid 1px #bbc2ca
        border-radius: 100%
    input[type="checkbox"]:checked + label
      &::before
        border: none
        width: 26px
        height: 26px
        background-image: embedurl("checked.svg")
        background-size: 100%
        background-position: center

  .vote
    display: block
    margin-top: 20px
    font-size: 24px
    border-radius: 4px
    text-align: center
    color: #fff
    padding: 16px
    overflow: ellipsis

.schedule
  margin-top: 20px
  .title-box
    margin: 0 13px
    &::before
      background-image: embedurl('schedule.svg')
  .-info
    margin: 13px 13px 0 13px
    border-radius: 4px
    border: solid 1px #bbc2ca
    p
      padding: 9px 9px 9px 38px
      font-size: 16px
      line-height: 1.2
      color: #2b2b2b
      position: relative
    p:not(:first-child)
      border-top: solid 1px #bbc2ca
    icon(url)
      content: ''
      display: block
      width: 38px
      height: 38px
      absolute: top 0 left 0
      background-image: embedurl(url)
      background-size: 70%
      background-position: center
      background-repeat: no-repeat
      -webkit-mask-image: embedurl(url)
      -webkit-mask-size: 70%
      -webkit-mask-repeat: no-repeat
      -webkit-mask-position: center
    .-time::before
      icon("calendar.svg")
    .-location::before
      icon("location.svg")
  .-desc
    margin: 18px 13px 0 13px
    font-size: 20px
    line-height: 1.2
    color: #2b2b2b
  .join
    display: block
    margin: 16px 13px 0 13px
    font-size: 24px
    border-radius: 4px
    text-align: center
    color: #fff
    padding: 16px
    overflow: ellipsis
  .-cancelled
    border: dashed 2px #dcdcdc
    background-color: #fff
    color: #fe6d6a
  .-ended
    border: dashed 2px #dcdcdc
    background-color: #fff
    color: #858199
  .joiners
    margin-top: 18px
    &>span
      margin: 0 13px
    ol
      margin-top: 8px
      padding: 8px 13px
      height: 40px
      list-style: none
      border-top: solid 1px #bbc2ca
      border-bottom: solid 1px #bbc2ca
      overflow: hidden
      &::before
        content: ''
        display: block
        float: right
        width: 20px
        height: 40px
        margin-bottom: 20px
        background-image: embedurl('arrow-left.svg')
        background-repeat: no-repeat
        background-position: center
        background-size: auto 100%
      &::after
        content: ''
        display: block
        clear: both
    li
      width: 40px
      height: 40px
      border-radius: 100%
      overflow: hidden
      float: left
      margin-bottom: 20px
      &:not(:first-child)
        margin-left: 12px
      img
        width: 100%
        height: 100%
.images
  margin: 20px 13px 0 13px
  list-style: none
  li
    position: relative
    width: 100%
    max-height: 1000px
    overflow: hidden
    a
      display: block
    img
      display: block
      width: 100%
    &:not(:first-child)
      margin-top: 17.3px
  .truncated
    &::after
      content: '长图'
      display: inline-block
      absolute: bottom 0 right 0
      font-size: 16px
      color: #fff
      background-color: rgba(133, 142, 153, 0.6)
      padding: 4px 5px
      border-radius: 3px 0 0 0

.new-comments
  margin: 40px 0 0 0
  h2
    background-color: #f4f6f8
    color: #858e99
    font-size: 16px
    font-weight: bold
    padding: 12px 16px
  li:not(:first-child) .comment
    border-top: solid 1px #d7dce1
  .comment
    position: relative
    padding: 15px 12px
    margin-left: 72px
    min-height: 38.6px
    .-avatar
      absolute: top 9.3px left (-3.0px - 53.3px)
      width: 53.3px
      height: 53.3px
      border-radius: 100%
      overflow: hidden
      img
        width: 100%
        height: 100%
    .-name
      display: block
      float: left
      font-size: 16px
      font-weight: bold
      color: #000
      min-height: 16px
      overflow: ellipsis
      line-height: 1.2
      max-width: 50%
    .-title
      member-title()
      float: left
      margin: 1px 0 0 6px
    .-content
      display: block
      clear: left
      float: left
      margin-top: 12px
      font-size: 16px
      color: #2b2b2b
      line-height: 1.2
    .-time
      display: block
      float: right
      margin-top: 1px
      font-size: 16px
      color: #858e99
    &::after
      content: ""
      display: block
      clear: both
  .-more
    display: block
    margin: 0 13px
    border-style: solid
    border-width: 2px
    border-radius: 4px
    padding 12px
    font-size: 20px
    text-align: center

.topic
  position: relative
  margin: 18px 13px 0 13px
  border-top: solid 1px #d7dce1
  padding: 38px 0 38px 170px
  min-height: 147px
  &::before
    content: ""
    background-image: embedurl("arrow.svg")
    background-repeat: no-repeat
    background-position: center
    display: block
    height: 14px
    width: 100%
    absolute: top -1px left 0
  .-image
    width: 147px
    height: 147px
    border: 1px solid #bbc2ca
    border-radius: 4px
    overflow: hidden
    absolute: top 38px left 0
    box-shadow: 0 1px #bbc2ca
    img
      width: auto
      height: 100%
      position: relative
  .-color
    display: block
    height: 16px
    width: 100%
    absolute: left 0 bottom 0
  .-name
    display: block
    margin-top: 2px
    max-width: 100%
    overflow: ellipsis
    line-height: 1.2
    font-size: 20px
    color: #2b2b2b
  .-desc
    display: block
    margin-top: 8px
    height: 38px
    overflow: hidden
    font-size: 16px
    line-height: 1.2
    color: #858e99
  .-join
    display: block
    margin-top: 32px
    padding: 13px 0
    border-radius: 6px
    text-align: center
    font-size: 20px
    color: #fff
  @media screen and (max-width: 400px)
    padding: 25px 0 25px 120px
    min-height: 97px
    .-image
      width: 97px
      height: 97px
      top: 25px
    .-name
      margin-top: 0
    .-desc
      margin-top: 8px
      height: 19px
      font-size: 16px
      overflow: ellipsis
    .-join
      margin-top: 10px
      padding: 9px 0
      font-size: 20px

body
  padding-bottom: 86px
  @media screen and (max-width: 400px)
    padding-bottom: 66px
.app
  fixed: bottom 0 left 0 right 0
  background-color: #fff
  box-shadow: 0 -4px 2px rgba(0, 0, 0, 0.1)
  height: 86px
  min-width: (320px - 80px - 13px - 13px)
  padding: 0 13px 0 (80px + 13px)
  .-icon
    width: 66px
    height: 66px
    overflow: hidden
    border-radius: 4px
    absolute: top 10px left 13px
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.3)
    img
      width: 100%
      height: 100%
  .-name
    display: block
    margin-top: 23px
    font-size: 20px
    color: #2b2b2b
  .-slogan
    display: block
    margin-top: 6px
    font-size: 16px
    color: #858e99
  .-download
    display: block
    absolute: top 20px right 13px
    padding: 13px 30px
    border-radius: 6px
    font-size: 20px
    color: #fff
    background-color: #00e4ff
  @media screen and (max-width: 400px)
    height: 66px
    padding-left: (70px + 13px)
    .-icon
      width: 56px
      height: 56px
      top: 5px
    .-name
      margin-top: 13px
    .-slogan
      font-size: 12px
    .-download
      padding: 13px 12px
      top: 10px
