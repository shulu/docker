@import 'nib'

*
	margin: 0
	padding: 0

a
	text-decoration: none
	user-select: none

html
	background-image: embedurl('bg.svg')
	background-repeat: repeat
	background-size: 32px auto
	user-select: none

body
	font-size: 15px

header img
	margin-top: 14px
	width: 100%

.step1
	margin-top: 20px
	text-align: center
#phone-txt
	width: 120px
	border: none
	border-radius: 0
	border-bottom: solid 1px #000
	font-size: 15px
	background-color: transparent

.questions
	list-style: none
	margin: 0 14px 0 14px
	background-color: #fff
	border-radius: 10px
	border: dashed #42b1ff 3px
	padding: 10px 0 100px 0
	position: relative
	overflow: hidden
	color: #000
	&::after
		content: ''
		display: block
		absolute: right 0 bottom -10px
		height: 125px
		width: 125px
		background-image: embedurl('ciyo-girl.svg')
		background-size: 100% auto
		background-repeat: no-repeat
		background-position: right

.question
	margin: 30px 13px 0 13px
	h3
		font-size: 15px

.question.empty h3
	color: #f00

.options
	list-style: none
	counter-reset: option-index

.option
	margin-top: 8px
	&:first-of-type
		margin-top: 15px
	line-height: 22px
	vertical-align: middle
	label
		display: inline-block
		padding-left: 22px
		position: relative
		&::before
			counter-increment: option-index
			content: counter(option-index, upper-alpha) ". "

input[type="checkbox"]
	display: none
input[type="checkbox"] + label::after
	content: ''
	display: block
	absolute: top 3px left 2px
	width: 13px
	height: 13px
	background-color: #fff
	border-radius: 100%
	border: solid 1px #c0e5ff
	box-shadow: inset 0 0 1px rgba(66, 177, 255, 0.75)

input[type="checkbox"]:checked + label::after
	content: ''
	background-color: #42b1ff
	box-shadow: inset 0 0 1px #42b1ff
	border-radius: 100%

input[type="checkbox"] ~ input[type="text"]
	display: none

input[type="checkbox"]:checked ~ input[type="text"]
	display: inline-block

.question.multi input[type="checkbox"] + div, .question.multi input[type="checkbox"] + label::after
	border-radius: 0

input[type="text"]
	border: none
	border-radius: 0
	border-bottom: solid 1px #000
	font-size: 15px
	width: 80px
	background-color: transparent

button
	display: block
	margin: 44px auto
	height: 36px
	width: 120px
	border: solid 2px #fff
	border-radius: 18px
	font-size: 18px
	background-color: #42b1ff
	color: #fff
	cursor: pointer
	box-shadow: 0 0 3px rgba(136, 136, 136, 0.75)

.conclusion
	.banner
		display: block
		width: 200px
		margin: 45px auto 0 auto
	.desc
		display: block
		width: 300px
		margin: 40px auto 0 auto
	p
		margin: 80px auto 0px auto
		text-align: center
		font-size: 20px
		color: #fff
	.logo
		display: block
		width: 100px
		margin: 15px auto 0 auto

