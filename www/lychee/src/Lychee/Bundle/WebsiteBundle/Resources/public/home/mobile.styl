contact-item($iconPath, $iconWidth, $iconHeight)
  display: inline-block
  font-size: 18px
  font-size: 2.8vw
  //line-height: $iconHeight
  vertical-align: middle
  margin-left: 10px
  &:before
    content: ''
    display: inline-block
    width: $iconWidth
    height: $iconHeight
    //line-height: $iconHeight
    vertical-align: middle
    margin-right: 4px
    background: url($iconPath)
    background-size: 100%
    background-repeat: no-repeat

.contact
  width: 100%
  position: absolute
  margin-top: 157.66%
  text-align: center
  text-shadow: rgba(0, 0, 0, 0.3) 1px 1px 1px
  line-height: 1.2
  h2
    display: none
    font-size: 16px
    font-size: 2.5vw
  ul
    display: inline-block
  li span
    display: none
  .-qq
    contact-item('image/qq.png', 25px * 0.5, 25px * 0.5)
  .-weibo
    contact-item('image/weibo.png', 32px * 0.5, 25px * 0.5)
  .-wechat
    contact-item('image/wechat.png', 30px * 0.5, 25px * 0.5)

@media screen and (max-width: 480px)
  .contact h2
    display: none

.copyright
  width: 100%
  position: absolute
  margin-top: 170%
  font-size: 14px
  font-size: 2.2vw
  text-align: center
  padding-bottom: 2%