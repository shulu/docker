{% set ua = userAgent() %}
{% spaceless %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    {% if ua.android %}
        <meta name="viewport" content="width=device-width, initial-scale=0.5, user-scalable=0">
    {% else %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    {% endif %}
    <meta name="format-detection" content="telephone=no">
    <meta name="description" content="{{ title }}">
    <meta name="keywords" content="次元,次元社,二次元">
    <link rel="shortcut icon" type="image/ico-x" href="/ciyocon-favicon.ico" />
    <title>{{ title }}</title>
    {% if ua.ie %}
        <link rel="stylesheet" href="{{ asset('bundles/lycheewebsite/home/desktop.css') }}" />
    {% else %}
        <link rel="stylesheet" media="screen and (max-width: 800px)" href="{{ asset('bundles/lycheewebsite/home/mobile.css') }}" />
        <link rel="stylesheet" media="screen and (min-width: 800px)" href="{{ asset('bundles/lycheewebsite/home/desktop.css') }}" />
    {% endif %}
    {% if ua.ios or ua.android %}
    <script>
        {% set link = ua.wechat ? wechat_link : (ua.ios ? iphone_link: android_link)  %}
        window.onload=function() {
            try {
                location.href = '{{ link }}';
            } catch (err) {}
        };
    </script>
    {% endif %}
</head>
<body >
    <div class="banner"><h1>次元社 - 最高能的二次元应用，大家都在玩！</h1></div>
    <div class="preview"></div>
    <div class="slogan"><p>最绅士的二次元社区，这里有二次元的一切</p></div>
    <div class="qrcode">
    </div>
    <ul class="download">
        <li><a class="iphone-link" href="{{ ua.wechat ? wechat_link : iphone_link }}"><span>iPhone 下载</span></a></li>
        <li><a class="android-link" href="{{ ua.wechat ? wechat_link : android_link }}"><span>Android 下载</span></a></li>
    </ul>
</body>
<script src="http://qn.ciyocon.com/web/common/qrcode.min.js"></script>
<script>
    new QRCode(document.getElementsByClassName("qrcode")[0], "{{ url('download_app') }}{{ package is empty ? '' : '?n='~package }}");
</script>
{{ include('LycheeWebsiteBundle::googleAnalytics.html.twig') }}
</html>
{% endspaceless %}
