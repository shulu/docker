<script>
    window.addEventListener("load", go, false);
    function go() {
        if (window.navigator.standalone == true) {
            var link = document.getElementById("link");
            var event = document.createEvent('MouseEvent');
            event.initMouseEvent('click');
            link.dispatchEvent(event);
        }
    }
</script>
<a id="link" style="display:none;" href="erciyuan://?action=view_topic&tid={{ topic.id }}"></a>
<header>
    <img src="{{ asset('bundles/lycheewebsite/topic/shortcut/ciyo.png') }}"/>
</header>
<div class="topic">
    <img src="{{ topic.indexImageUrl | resizeImage(160, 160) }}"/>
    <p>{{ topic.title }}</p>
</div>
<div class="note">
    <p><img class="share-btn" src="{{ asset('bundles/lycheewebsite/topic/shortcut/share.png') }}"/><span>点击下方按钮后，</span></p>
    <p><img class="add-btn" src="{{ asset('bundles/lycheewebsite/topic/shortcut/add.png') }}"/><span>点击<strong>添加到主屏幕</strong></span></p>
</div>
