{% extends 'LycheeAdminBundle:ManualIntervention:layout.html.twig' %}

{% block body %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>类型</th>
                    <th>ID</th>
                    <th>简介</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>帖子</td>
                    <td>
                        <a href="{{ path('lychee_admin_contentaudit_postdetail', {id: post.id}) }}">{{ post.id }}</a>
                    </td>
                    <td>{{ post.content }}</td>
                    <td>
                        {#<button class="btn btn-danger delete-item" data-item-id="{{ item.id }}">#}
                            {#<span class="glyphicon glyphicon-trash"></span>#}
                        {#</button>#}
                    </td>
                </tr>
            {% endfor %}
            {% for topic in topics %}
                <tr>
                    <td>次元</td>
                    <td>{{ topic.id }}</td>
                    <td>{{ topic.title }}</td>
                    <td>
                        {#<button class="btn btn-danger delete-item" data-item-id="{{ item.id }}">#}
                        {#<span class="glyphicon glyphicon-trash"></span>#}
                        {#</button>#}
                    </td>
                </tr>
            {% endfor %}
            {% for user in users %}
                <tr>
                    <td>用户</td>
                    <td>{{ user.id }}</td>
                    <td>{{ user.nickname }}</td>
                    <td>
                        {#<button class="btn btn-danger delete-item" data-item-id="{{ item.id }}">#}
                        {#<span class="glyphicon glyphicon-trash"></span>#}
                        {#</button>#}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $(".delete-item").click(function () {
                if (confirm("确认删除？")) {
                    var id = $(this).data("item-id");
                    var $form = $('<form method="POST"></form>');
                    $form.attr("action", "{{ path('lychee_admin_manualintervention_deleterecommendation') }}");
                    $form.append('<input type="hidden" name="id" value="' + id + '">');
                    $form.append(
                            '<input type="hidden" name="callback_url" ' +
                            'value="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">'
                    );
                    $(document.body).append($form);
                    $form.submit();
                }

                return false;
            });
        });
    </script>
{% endblock %}
