{% extends 'LycheeAdminBundle:App:layout.html.twig' %}

{% block body %}
    <div class="col-sm-6">
        <form class="form-horizontal" method="post" action="{{ path('lychee_admin_app_saveandroiddownloadlink') }}">
            <div class="form-group">
                <label class="col-sm-3 control-label">当前下载链接</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" value="{{ androidDownloadLink }}" disabled>
                </div>
            </div>
            <div class="form-group">
                <label for="link" class="col-sm-3 control-label">新Android下载链接</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="link" name="link">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-primary">保 存</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
