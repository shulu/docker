{% extends 'LycheeAdminBundle:ManualIntervention:layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .nav-tabs { margin-bottom: 10px; }
        .btns { min-width: 102px; }
    </style>
{% endblock %}

{% block body %}
    <ul class="nav nav-tabs">
        <li role="presentation">
            <a href="{{ path('lychee_admin_manualintervention_recommendationspecialsubject') }}">推荐列表</a>
        </li>
        <li role="presentation">
            <a href="{{ path('lychee_admin_manualintervention_tobepublishitem', {type: "special_subject"}) }}">待发布</a>
        </li>
        <li role="presentation" class="active">
            <a href="{{ path('lychee_admin_manualintervention_specialsubject') }}">专题</a>
        </li>
    </ul>
    <a href="{{ path('lychee_admin_manualintervention_new_specialsubject') }}" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus"></span>
    </a>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>专题ID</th>
                    <th>标题</th>
                    <th>封面</th>
                    <th>描述</th>
                    <td>创建时间</td>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
            {% for specialSubject in specialSubjects %}
                <tr>
                    <td>{{ specialSubject.id }}</td>
                    <td>{{ specialSubject.name }}</td>
                    <td>
                        <a href="{{ path('lychee_admin_manualintervention_specialsubjectdetail', {id: specialSubject.id}) }}">
                            <img src="{{ specialSubject.banner }}" alt="special-subject-{{ specialSubject.id }}"/>
                        </a>
                    </td>
                    <td>
                        <p>{{ specialSubject.description }}</p>
                    </td>
                    <td>{{ specialSubject.createTime|date('Y-m-d H:i') }}</td>
                    <td class="btns">
                        <a href="{{ path('lychee_admin_manualintervention_modifyspecialsubject',
                        {id: specialSubject.id}) }}" class="btn btn-default">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <button class="btn btn-danger delete-item" data-id="{{ specialSubject.id }}">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <nav>
            <ul class="pagination">
                <li>
                    <a href="{{ path('lychee_admin_manualintervention_specialsubject') }}"
                       aria-label="Previous">
                        <span aria-hidden="true">&lt; 首页</span>
                    </a>
                </li>
                <li>
                    <a aria-label="Next"
                       href="{{ path('lychee_admin_manualintervention_specialsubject', {cursor: nextCursor}) }}">
                        <span aria-hidden="true">下一页 &gt;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $(".delete-item").click(function () {
                if (confirm("删除专题会把正在推荐的专题一并删除，是否继续？")) {
                    var id = $(this).data("id");
                    var $form = $('<form method="POST"></form>');
                    $form.attr("action", "{{ path('lychee_admin_manualintervention_removespecialsubject') }}");
                    $form.append('<input type="hidden" name="id" value="' + id + '">');
                    $form.append(
                        '<input type="hidden" name="callback_url" ' +
                        'value="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">'
                    );
                    $(document.body).append($form);
                    $form.submit();
                }

                return false;
            });
        });
    </script>
{% endblock %}