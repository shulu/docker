{% extends 'LycheeAdminBundle:ManualIntervention:layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        select.filter { display: inline-block; width: 100px; }
        #search_during_time { width: 200px; }
        table { margin-top: 20px; }
    </style>
{% endblock %}

{% block body %}
    <div class="clearfix">
        <div class="col-md-4">
            <label for="">检索条件：</label>
            <select name="" id="" class="form-control filter">
                <option value="">按发帖量</option>
            </select>
        </div>
        <div class="pull-right" id="search_during_time">
            <label for="">时间窗口：</label>
            <select name="" id="" class="form-control filter">
                <option value="">1小时内</option>
            </select>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>ID</th>
                <th>标题</th>
                <th>领主</th>
                <th>入驻人数</th>
                <th>总帖量</th>
            </tr>
            </thead>
            <tbody>
            {% for recommendedId in recommendedIds %}
                <tr>
                    <td>
                        <a href="{{ path('lychee_admin_topic_detail', {topicId: recommendedId}) }}" target="_blank">
                            {{ recommendedId }}
                        </a>
                    </td>
                    <td>{{ recommendedData[recommendedId].title }}</td>
                    <td>
                        {% set managerId = recommendedData[recommendedId].managerId %}
                        {% if managerId %}
                            [<a href="{{ path('lychee_admin_contentaudit_userdetail', {userId: managerId}) }}" target="_blank">
                            {{ managerId }}
                            </a>] {{ managers[managerId].nickname }}
                        {% endif %}
                    </td>
                    <td>{{ topicFollowers[recommendedId] }}</td>
                    <td>{{ postsAmount[recommendedId] is defined? postsAmount[recommendedId] : 0 }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% import 'LycheeAdminBundle::helper.html.twig' as helper %}
    {{ helper.pagination(paginator, 'lychee_admin_manualintervention_topics') }}
{% endblock %}