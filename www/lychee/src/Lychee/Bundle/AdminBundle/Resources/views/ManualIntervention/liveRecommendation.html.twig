{% extends 'LycheeAdminBundle:ManualIntervention:liveTemplate.html.twig' %}
{% import 'LycheeAdminBundle::helper.html.twig' as helper %}

{% block list %}
    <button type="button" id="create_group_btn" class="btn btn-primary" data-toggle="modal" data-target="#create_item_form">
        <span class="glyphicon glyphicon-plus"></span>
    </button>
    {{ helper.recommendationDateSearcher(app.request.get('date')) }}

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <td>直播间ID</td>
                <th>主播昵称</th>
                <th>主播头像</th>
                <th>直播图片</th>
                <th>推荐时间</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.liveId }}</td>
                    <td>{{ item.anchorName }}</td>
                    <td>
                        <img src="{{ item.anchorAvatar }}" alt="live-{{ item.id }}" width="50px" height="50px"/>
                    </td>
                    <td>
                        <img src="{{ item.liveCover }}" alt="live-{{ item.id }}" width="50px" height="50px"/>
                    </td>
                    <td>{{ item.recommendedTime|date('Y-m-d H:i') }}</td>
                    <td>
                        <button class="btn btn-danger delete-item" data-item-id="{{ item.id }}">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <nav>
        <ul class="pagination">
            <li>
                <a href="{{ path('lychee_admin_manualintervention_liverecommendation', {date: date, page: 1}) }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {% if pageCount < 1 %}{% set pageCount = 1 %}{% endif %}
            {% for p in 1..min(10, pageCount) %}
                <li class="{{ p==page? 'active' }}">
                    <a href="{{ path('lychee_admin_manualintervention_liverecommendation', {date: date, page: p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
            <li>
                <a href="{{ path('lychee_admin_manualintervention_liverecommendation', {date: date, page: pageCount}) }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
    {{ helper.recommendLiveWin() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $(".delete-item").click(function () {
                if (confirm("确认删除？")) {
                    var id = $(this).data("item-id");
                    var $form = $('<form method="POST"></form>');
                    $form.attr("action", "{{ path('lychee_admin_manualintervention_deleteliverecommendation') }}");
                    $form.append('<input type="hidden" name="id" value="' + id + '">');
                    $form.append(
                            '<input type="hidden" name="callback_url" ' +
                            'value="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">'
                    );
                    $(document.body).append($form);
                    $form.submit();
                }

                return false;
            });
        });
    </script>
{% endblock %}