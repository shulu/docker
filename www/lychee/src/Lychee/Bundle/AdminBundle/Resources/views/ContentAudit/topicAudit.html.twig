{% extends 'LycheeAdminBundle:ContentAudit:layout.html.twig' %}

{% block body %}
    <div>
        <form class="form-inline">
            <div class="form-group check-all">
                <input type="checkbox" id="check_all">
                <label for="check_all">全选</label>
            </div>
            <button type="button" class="btn btn-info" id="batch_confirm">批量通过</button>
            <button type="button" class="btn btn-danger" id="batch_reject">批量拒绝</button>
        </form>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th></th>
                <th>ID</th>
                <th>次元名称</th>
                <th>次元封面</th>
                <th>简介</th>
                <th>分类</th>
                <th>申请用户</th>
                <th>申请时间</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody id="topic_tbody">
                {% for topic in topics %}
                    <tr>
                        <td><input type="checkbox" class="check-topic" data-id="{{ topic.id }}"></td>
                        <td>{{ topic.id }}</td>
                        <td>{{ topic.title }}</td>
                        <td><img src="{{ topic.indexImageUrl|resizeImage(0, 50) }}"></td>
                        <td>{{ topic.description }}</td>
                        <td>{{ categories[topic.categoryId].name }}</td>
                        <td>
                            <a href="{{ path('lychee_admin_contentaudit_userdetail', {userId: topic.creatorId}) }}" target="_blank">
                                {{ authors[topic.creatorId].nickname }}
                            </a>
                        </td>
                        <td>{{ topic.applyTime|date('Y-m-d H:i') }}</td>
                        <td>
                            <button type="button" class="btn btn-info" data-id="{{ topic.id }}" onclick="confirmCreatingApplication(this)">
                                <span class="glyphicon glyphicon-ok"></span>
                            </button>
                            <button type="button" class="btn btn-danger" data-id="{{ topic.id }}" onclick="rejectCreatingApplication(this)">
                                <span class="glyphicon glyphicon-remove"></span>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function processCreatingApplication(operate, ids) {
            var $form = $('<form method="post"></form>');
            $form.attr('action', "{{ path('lychee_admin_contentaudit_topicprocesscreatingapplication') }}");
            for (var index in ids) {
                $form.append('<input type="hidden" name="ids[]" value="' + ids[index] + '">');
            }
            $form.append('<input type="hidden" name="operate" value="' + operate + '">');
            $('body').append($form);
            $form.submit();
        }

        function confirmCreatingApplication(that) {
            processCreatingApplication('confirm', [$(that).data('id')]);
        }

        function rejectCreatingApplication(that) {
            if (confirm('确定拒绝通过?')) {
                processCreatingApplication('reject', [$(that).data('id')]);
            }
        }

        $(document).ready(function () {
            var $checkTopic = $('.check-topic');
            $('#check_all').click(function () {
                if (this.checked) {
                    $checkTopic.prop('checked', true);
                } else {
                    $checkTopic.prop('checked', false);
                }
            });
            $('#batch_confirm').click(function () {
                var ids = [];
                $checkTopic.filter(':checked').each(function(index, item) {
                    ids.push($(item).data('id'));
                });
                if (ids.length <= 0) {
                    alert('没有勾选任何项目.');
                    return false;
                }
                processCreatingApplication('confirm', ids);
            });
            $('#batch_reject').click(function () {
                if (confirm('确定批量拒绝?')) {
                    var ids = [];
                    $checkTopic.filter(':checked').each(function(index, item) {
                        ids.push($(item).data('id'));
                    });
                    if (ids.length <= 0) {
                        alert('没有勾选任何项目.');
                        return false;
                    }
                    processCreatingApplication('reject', ids);
                }
            });
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .check-all { margin-right: 20px; }
    </style>
{% endblock %}