{% extends 'LycheeAdminBundle:Extramessage:index.html.twig' %}
{% block title %}用户查询{% endblock %}
{% block table %}
    <div>
        <div class="clearfix">
            <div class="col-lg-4 pull-right">
                <form>
                    <div class="input-group">
                        <input type="text" name="query" class="form-control" placeholder="用户名称" value="{{ query|default('') }}">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">搜索</button>
                        </span>
                    </div><!-- /input-group -->
                </form>
            </div><!-- /.col-lg-6 -->
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>昵称</th>
                    <th>注册时间</th>
                    <th>头像</th>
                    <th>签名</th>
                    <th>年龄</th>
                    <th>性别</th>
                </tr>
                </thead>
                <tbody id="topic_tbody">
                {% if users %}
                {% for user in users %}
                    <tr class="">
                        <td>{{ user.id }}</td>
                        <td>{{ user.nickname }}</td>
                        <td>{{ user.createTime|date('Y-m-d H:i:s') }}</td>
                        <td>{% if user.avatarUrl %}<img src="{{ user.avatarUrl }}">{% endif %}</td>
                        <td>{{ user.signature }}</td>
                        <td>{{ user.age }}</td>
                        <td>{{ user.gender == 1 ? '男':'女' }}</td>
                    </tr>
                {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
    {% if paginator is not null %}
        {% import 'LycheeAdminBundle::helper.html.twig' as helper %}
        {{ helper.newpage(paginator, app.request.get('_route'),query)}}
    {% endif %}
{% endblock %}

{% block style %}

{% endblock %}