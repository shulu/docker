{% extends 'LycheeAdminBundle:Extramessage:index.html.twig' %}
{% block title %}词典查询{% endblock %}
{% block table %}
    <div xmlns="http://www.w3.org/1999/html">
        <div class="clearfix">
            <div class="col-lg-4 pull-right">
                <form>
                    <div class="input-group">
                        <input type="text" name="query" class="form-control" placeholder="礼品码" value="{{ query|default('') }}">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">搜索</button>
                        </span>
                    </div><!-- /input-group -->
                </form>
            </div><!-- /.col-lg-6 -->
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>礼品码</th>
                    <th>章节</th>
                    <th>创建时间</th>
                    <th>过期时间</th>
                    <th>渠道</th>
                    <th>兑换用户</th>
                    <th>兑换时间</th>
                </tr>
                </thead>
                <tbody id="topic_tbody">
                {% for code in codes %}
                    <tr>
                        <td>{{ code.id }}</td>
                        <td>{{ code.code }}</td>
                        <td>{{ products[code.productId].name|default('') }}</td>
                        <td>{{ code.createTime|date('Y-m-d H:i:s') }}</td>
                        <td>{{ code.codeExpireTime ? code.codeExpireTime|date("Y-m-d H:i:s") : '' }}</td>
                        <td>{{ code.vendor }}</td>
                        <td>{{ users[code.receiverId].nickname|default('') }}</td>
                        <td>{{ code.receiveTime ? code.receiveTime|date("Y-m-d H:i:s") : '' }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% if paginator is not null %}
                {% import 'LycheeAdminBundle::helper.html.twig' as helper %}
                {{ helper.newpage2(paginator, app.request.get('_route'), query, {'record_id':record_id})}}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>

    </style>
{% endblock %}

{% block javascripts %}
    <script>

    </script>
{% endblock %}