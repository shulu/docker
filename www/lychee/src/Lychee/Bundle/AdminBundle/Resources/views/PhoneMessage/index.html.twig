{% extends 'LycheeAdminBundle::left_nav_layout.html.twig' %}


{% block body %}
<div class="col-sm-8 col-sm-offset-3">
    <form class="form-horizontal" action="{{ path('lychee_admin_phonemessage_index') }}" method="post"
          enctype="multipart/form-data" id="phonemessage_send_form">

        <div class="form-group">
            <label for="image" class="col-sm-4 control-label">两列的csv文件[手机,昵称]</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" id="file" name="file">
            </div>
        </div>
        <div class="form-group">
            <label for="content" class="col-sm-4 control-label">短信模板[@var(nickname)]</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="content" name="content" rows="8" placeholder="400字以内">{{ content| default("【次元社】你好,@var(nickname)!欢迎来到次元社") }}</textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">发送短信</button>
            </div>
        </div>
    </form>
</div>
    {% if uploadReturn %}
        <table class="table table-striped table-bordered">
            <thead>
                <th>Phone</th>
                <th>Status</th>
            </thead>
            <tbody>
                {% for data in uploadReturn %}
                <tr>
                   <td>{{ data.to }}</td>
                    <td>{{ data.status }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}