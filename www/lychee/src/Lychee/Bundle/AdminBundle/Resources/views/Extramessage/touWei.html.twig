{% extends 'LycheeAdminBundle:Extramessage:index.html.twig' %}
{% block title %}投喂查询{% endblock %}
{% block table %}
    <div>
        <div class="clearfix">
            <div class="col-lg-4 pull-right">
                <form>
                    <div class="input-group">
                        <input type="text" name="query" class="form-control" placeholder="用户ID" value="{{ query|default('') }}">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">搜索</button>
                        </span>
                    </div><!-- /input-group -->
                </form>
            </div><!-- /.col-lg-6 -->
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>商品名称</th>
                    <th>商品描述</th>
                    <th>价格</th>
                    <th>购买时间</th>
                    <th>支付渠道</th>
                </tr>
                </thead>
                <tbody id="topic_tbody">
                {% if pays %}
                {% for pay in pays %}
                    <tr class="">
                        <td>{{ pay.productId }}</td>
                        <td>{{ pay.appStoreTransactionId }}</td>
                        <td>{{ pay.totalFee }}</td>
                        <td>{{ pay.purchaseTime|date('Y-m-d H:i:s') }}</td>
                        <td>{{ pay.payType}}</td>
                    </tr>
                {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>

    </style>
{% endblock %}

{% block javascripts %}
    <script>

    </script>
{% endblock %}