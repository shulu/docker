{% extends 'LycheeAdminBundle:List:layout.html.twig' %}

{% block body %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>ID</th>
                <th>头像</th>
                <th>昵称</th>
                <th>邮箱/手机</th>
                <th>冻结时间</th>
                <th>性别</th>
                <th><span class="glyphicon glyphicon-wrench"></span></th>
            </tr>
            </thead>
            <tbody>
                {% for frozenUser in frozenUsers %}
                    <tr>
                        <td>
                            <a href="{{ path('lychee_admin_contentaudit_userdetail', {userId: frozenUser.userId}) }}"
                               target="_blank">{{ frozenUser.userId }}</a>
                        </td>
                        <td><img class="avatar-image" src="{{ users[frozenUser.userId].avatarUrl }}" alt=""/></td>
                        <td>{{ users[frozenUser.userId].nickname }}</td>
                        <td>{{ users[frozenUser.userId].email }}/{{ users[frozenUser.userId].phone }}</td>
                        <td>{{ frozenUser.time|date('Y-m-d H:i') }}</td>
                        <td>{{ users[frozenUser.userId].gender == 1? '男' : '女' }}</td>
                        <td><button class="btn btn-default frozen_user_renew" user_id="{{ frozenUser.userId }}">恢复</button></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% import 'LycheeAdminBundle::helper.html.twig' as helper %}
    {{ helper.pagination(paginator, 'lychee_admin_list_blacklist') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .avatar-image{ height: 50px; }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $(".frozen_user_renew").on("click", function() {
                if (true === confirm("确定恢复此帐号？")) {
                    $.ajax("{{ path('lychee_admin_contentaudit_unfreezeuser') }}", {
                        type: "POST",
                        dataType: "json",
                        data: {
                            user_id: $(this).attr("user_id")
                        },
                        success: function() {
                            window.location.reload();
                        },
                        error: function() {
                            alert("发生未知错误！");
                        }
                    });
                }
            });
        });
    </script>
{% endblock %}