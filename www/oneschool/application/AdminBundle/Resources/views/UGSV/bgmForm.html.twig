<!-- Modal -->
<div class="modal fade" id="create_bgm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">创建/编辑 {{ bgmName }}</h4>
            </div>
            <input type="hidden" id="bgm_fetch_url" value="{{ fetchUrl }}">
            <form role="form" method="post" action="{{ formPath }}" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="bgm_name">歌曲名</label>
                        <input type="text" class="form-control" id="bgm_name" name="name">
                        <input type="hidden" name="id" id="bgm_id">
                    </div>
                    <div class="form-group">
                        <label for="bgm_singer_name">作者</label>
                        <input type="text" class="form-control" id="bgm_singer_name" name="singer_name">
                    </div>
                    <div class="form-group">
                        <label for="bgm_duration_m">歌曲长度</label>
                        <input type="text" class="form-control" id="bgm_duration_m" name="duration[]">分
                        <input type="text" class="form-control" id="bgm_duration_s" name="duration[]">秒
                    </div>
                    <div class="form-group" id="origin_cover_wrap" style="display: none;">
                        <label>原封面</label>
                        <img src="javascript:;" alt="banner" id="origin_cover">
                    </div>
                    <div class="form-group">
                        <label for="bgm_cover">封面</label>
                        <input type="file" class="form-control" multiple="true" name="cover"
                               id="bgm_cover">
                    </div>
                    <div class="form-group" id="bgm_src_wrap" >
                        <label for="bgm_src">音频文件</label>
                        <input type="file" class="form-control" multiple="true" name="src"
                               id="bgm_src">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">确 定</button>
                </div>
            </form>
        </div>
    </div>
</div>