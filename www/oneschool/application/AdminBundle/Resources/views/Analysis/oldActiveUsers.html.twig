{% extends 'LycheeAdminBundle:Analysis:layout.html.twig' %}

{% block body %}
    <h3>最近7日活跃老用户</h3>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>用户ID</th>
                <th>昵称</th>
                <th>注册时间</th>
                <th>登录方式</th>
                <th>性别</th>
                <th>圈量</th>
                <th>粉量</th>
                <th>入驻次元数</th>
                <th>发帖量</th>
                <th>改图量</th>
                <th>技能</th>
            </tr>
            </thead>
            <tbody>
                {% for row in data %}
                    <tr>
                        <td>{{ row.userId }}</td>
                        <td>{{ row.nickname }}</td>
                        <td>{{ row.createTime|date('Y-m-d H:i') }}</td>
                        <td>{{ row.signInMethods|join(', ') }}</td>
                        <td>{{ row.gender == '1'? '男' : '女' }}</td>
                        <td>{{ row.followees }}</td>
                        <td>{{ row.followers }}</td>
                        <td>{{ row.topics }}</td>
                        <td>{{ row.posts }}</td>
                        <td>{{ row.imageComments }}</td>
                        <td>{{ row.skills }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}