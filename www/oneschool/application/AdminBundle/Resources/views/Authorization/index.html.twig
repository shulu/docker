{% extends 'LycheeAdminBundle:Authorization:layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table-responsive { margin-top: 20px; }
    </style>
{% endblock %}

{% block body %}
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#create_account">
        <span class="glyphicon glyphicon-plus"></span>
    </button>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Email</th>
                <th class="text-center">昵称</th>
                <th class="text-center">创建时间</th>
                <th class="text-center">状态</th>
                <th class="text-center">操作</th>
            </tr>
            </thead>
            <tbody>
            {% for manager in managers %}
                <tr>
                    <td class="text-center">{{ manager.id }}</td>
                    <td class="text-center">{{ manager.email }}</td>
                    <td class="text-center">{{ manager.name }}</td>
                    <td class="text-center">{{ manager.createTime|date("Y-m-d H:i") }}</td>
                    <td class="text-center">
                        {% if manager.frozen == true %}
                            <button class="btn btn-default unfreeze-manager" data-id="{{ manager.id }}">
                                <span class="glyphicon glyphicon-ban-circle"></span>
                            </button>
                        {% else %}
                            <button class="btn btn-success freeze-manager" data-id="{{ manager.id }}">
                                <span class="glyphicon glyphicon-ok"></span>
                            </button>
                        {% endif %}
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-info account-edit"
                                data-id="{{ manager.id }}" data-email="{{ manager.email }}"
                                data-nickname="{{ manager.name }}" data-toggle="modal" data-target="#modify_account">
                            <span class="glyphicon glyphicon-edit"></span>
                        </button>
                        <button class="btn btn-default reset-password" value="{{ manager.id }}">重置密码</button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="create_account" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span
                                aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">添加后台帐号</h4>
                </div>
                <form role="form" method="post" action="{{ path('lychee_admin_authorization_addaccount') }}">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="email">电子邮箱</label>
                            <input type="text" class="form-control" id="email" name="email" placeholder="example@example.com">
                        </div>
                        <div class="form-group">
                            <label for="nickname">昵称</label>
                            <input type="text" class="form-control" id="nickname" name="nickname">
                        </div>
                        <div class="form-group">
                            <label for="password">密码</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <div class="form-group">
                            <label for="retype_password">确认密码</label>
                            <input type="password" class="form-control" id="retype_password" name="retype_password">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">确 定</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="modify_account" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span
                                aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">编辑后台帐号</h4>
                </div>
                <form role="form" method="post" action="{{ path('lychee_admin_authorization_modifyaccount') }}">
                    <input type="hidden" name="account_id" id="account_id">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="email">电子邮箱</label>
                            <input type="text" class="form-control" id="account_email" name="account_email">
                        </div>
                        <div class="form-group">
                            <label for="nickname">昵称</label>
                            <input type="text" class="form-control" id="account_nickname" name="account_nickname">
                        </div>
                    </div>
                    <div class="modal-footer"><button type="submit" class="btn btn-primary">保 存</button></div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $(".reset-password").on("click", function() {
                if (true === confirm("确认重置密码？")) {
                    $.ajax("{{ path('lychee_admin_authorization_resetpassword') }}", {
                        type: "POST",
                        data: {
                            manager_id: $(this).val()
                        },
                        dataType: "json",
                        error: function() {
                            alert("重置失败（程序出错）");
                        },
                        success: function() {
                            alert("重置成功");
                        }
                    });
                }
            });
            $('.unfreeze-manager').click(function() {
                var managerId = $(this).data('id');
                if (!confirm('确定恢复此账号?')) {
                    return false;
                }
                var $form = $('<form method="post"></form>');
                $form.attr('action', '{{ path("lychee_admin_authorization_unfreezemanager") }}');
                $form.append('<input type="hidden" name="id" value="' + managerId + '">');
                $('body').append($form);
                $form.submit();
            });
            $('.freeze-manager').click(function() {
                var managerId = $(this).data('id');
                if (!confirm('确定封禁此账号?')) {
                    return false;
                }
                var $form = $('<form method="post"></form>');
                $form.attr('action', '{{ path("lychee_admin_authorization_freezemanager") }}');
                $form.append('<input type="hidden" name="id" value="' + managerId + '">');
                $('body').append($form);
                $form.submit();
            });
            $('.account-edit').click(function() {
                $('#account_id').val($(this).data('id'));
                $('#account_email').val($(this).data('email'));
                $('#account_nickname').val($(this).data('nickname'));

            });
        });
    </script>
{% endblock %}