{% extends 'LycheeAdminBundle:Extramessage:index.html.twig' %}
{% block title %}日志管理{% endblock %}
{% block table %}
    <div>
        <div class="clearfix">
            <div class="col-lg-4 pull-right">
                <form>
                    <div class="input-group">
                        <input type="text" name="query" class="form-control" placeholder="用户ID" value="{{ query|default('') }}">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">搜索</button>
                        </span>
                    </div><!-- /input-group -->
                </form>
            </div><!-- /.col-lg-6 -->
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>用户ID</th>
                    <th>日志</th>
                </tr>
                </thead>
                <tbody id="topic_tbody">
                    <tr class="">
                        {% if daily %}
                        <td>{{ daily.userId }}</td>
                        <td>
                            {{ daily.record }}
                        </td>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>

    </style>
{% endblock %}

{% block javascripts %}
    <script>

    </script>
{% endblock %}