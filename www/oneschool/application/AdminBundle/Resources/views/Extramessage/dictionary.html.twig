{% extends 'LycheeAdminBundle:Extramessage:index.html.twig' %}
{% block title %}词典查询{% endblock %}
{% block table %}
    <div xmlns="http://www.w3.org/1999/html">
        <div class="clearfix">
            <div class="col-lg-4 pull-right">
                <form>
                    <div class="input-group">
                        <input type="text" name="query" class="form-control" placeholder="用户ID" value="{{ query|default('') }}">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">搜索</button>
                        </span>
                    </div><!-- /input-group -->
                </form>
            </div><!-- /.col-lg-6 -->
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="display: inline-block">
                <thead>
                <tr>
                    <th>用户ID</th>
                    <th>词典</th>
                </tr>
                </thead>
                <tbody id="topic_tbody">
                    <tr class="" style="width: 100%">
                        {% if record %}
                        <td>
                            {{ id }}
                        </td>
                        <td style="display: inline-block;width: 100%;overflow: hidden;word-wrap: break-word;">
                            {% for rec in record %}
                                {{ rec }},
                            {% endfor %}
                        </td>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>

    </style>
{% endblock %}

{% block javascripts %}
    <script>

    </script>
{% endblock %}