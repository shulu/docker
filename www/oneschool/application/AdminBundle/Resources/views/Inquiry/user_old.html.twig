{% extends 'LycheeAdminBundle:Inquiry:layout.html.twig' %}
{% import 'LycheeAdminBundle::helper.html.twig' as helper %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .avatar-image{ height: 50px; }
    </style>
{% endblock %}

{% block body %}
    <div class="clearfix">
        <div class="col-lg-4 pull-right">
            <form>
                <div class="input-group">
                    <input type="text" name="query" class="form-control" placeholder="用户ID或昵称">
                    <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">搜索</button>
                </span>
                </div><!-- /input-group -->
            </form>
        </div><!-- /.col-lg-6 -->
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>ID</th>
                <th>头像</th>
                <th>昵称</th>
                <th>创建时间</th>
                <th>性别</th>
                <th>状态</th>
                <th>领主次元</th>
                <th><span class="glyphicon glyphicon-wrench"></span></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>
                        <a href="{{ path('lychee_admin_inquiry_userdetail', {userId: user.id}) }}" target="_blank">
                            {{ user.id }}
                        </a>
                    </td>
                    <td><img class="avatar-image" src="{{ user.avatarUrl }}" alt=""/></td>
                    <td>{{ user.nickname }}</td>
                    <td>{{ user.createTime|date('Y-m-d H:i') }}</td>
                    <td>{{ user.gender == 1? '男' : '女' }}</td>
                    <td>
                        {% if true == user.frozen %}
                            <span class="glyphicon glyphicon-ban-circle"></span>
                        {% else %}
                            <span class="glyphicon glyphicon-ok"></span>
                        {% endif %}
                    </td>
                    <td>
                        {% for topic in managerTopics[user.id] %}
                            <p>
                                {% if topic %}
                                    <a href="{{ path('lychee_admin_inquiry_topicdetail', {topicId: topic.id}) }}" target="_blank">
                                        {{ topic.title }}
                                    </a>
                                {% else %}
                                    <a href="{{ path('lychee_admin_inquiry_usertopics', {managerId: user.id}) }}" target="_blank">更多...</a>
                                {% endif %}
                            </p>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('lychee_admin_inquiry_userlistpostbyauthor', {'authorId': user.id}) }}"
                           target="_blank">
                            查看所有帖子
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}