{% extends 'LycheeAdminBundle:ContentAudit:layout.html.twig' %}

{% block body %}
    <ul class="nav nav-tabs">
        <li role="presentation"><a href="{{ path('lychee_admin_contentaudit_userdetail', {userId: authorId}) }}">资料</a></li>
        <li role="presentation">
            <a href="{{ path('lychee_admin_contentaudit_postlistbyauthor', {authorId: authorId}) }}">帖子</a>
        </li>
        <li role="presentation">
            <a href="{{ path('lychee_admin_contentaudit_managertopics', {managerId: authorId}) }}">领主次元</a>
        </li>
        <li role="presentation">
            <a href="{{ path('lychee_admin_contentaudit_commentsbyauthor', {authorId: authorId}) }}">用户评论</a>
        </li>
        <li role="presentation" class="active"><a href="#">用户充值明细</a></li>
        <li role="presentation">
            <a href="{{ path('lychee_admin_contentaudit_exchangedetail', {authorId: authorId}) }}">用户兑换明细</a>
        </li>
    </ul>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>充值时间</th>
                <th>充值金额</th>
                <th>充值次元币</th>
                <th>订单号</th>
                <th>平台</th>
                <th>支付渠道</th>
            </tr>
            </thead>
            <tbody>
            {% if items | length > 0 %}
                {% for item in items %}
                    <tr>
                        <td>{{ item.purchase_time }}</td>
                        <td>{{ item.total_fee }}</td>
                        <td>{{ item.ciyo_coin }}</td>
                        <td>{{ item.transaction_id ? item.transaction_id : item.appstore_transaction_id}}</td>
                        <td>{{ item.transaction_id ? '安卓' : '苹果' }}</td>
                        <td>{{ item.pay_type =='wechat' ? "微信" : item.pay_type =='alipay' ? "支付宝" : item.pay_type == 'qpay'? "QQ支付" : "苹果商店"}}</td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
    <nav>
        <ul class="pagination">
            <li>
                <a href="{{ path('lychee_admin_contentaudit_rechargedetail', {authorId: authorId, page: page}) }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {% if pageCount < 1 %}{% set pageCount = 1 %}{% endif %}
            {% for p in 1..min(10, pageCount) %}
                <li class="{{ p==page? 'active' }}">
                    <a href="{{ path('lychee_admin_contentaudit_rechargedetail', {authorId: authorId, page: p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
            <li>
                <a href="{{ path('lychee_admin_contentaudit_rechargedetail', {authorId: authorId, page: pageCount}) }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}