{% extends 'LycheeAdminBundle:App:layout.html.twig' %}

{% block body %}
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#create_item">
        <span class="glyphicon glyphicon-plus"></span>
    </button>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>名称</th>
                <th>域名</th>
                <th>类型</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            {% for row in data %}
                <tr>
                    <td>{{ row.name }}</td>
                    <td>{{ row.domain }}</td>
                    {% for name, id in types if id == row.type %}
                        <td>{{ name }}</td>
                    {% endfor %}
                    <td><a href="#" class="remove-domain" data-domain-id="{{ row.id }}">删除</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <ul class="pagination">
        {% for index in 1..pages %}
            <li class="{{ index == page? 'active' }}">
                <a href="{{ path('lychee_admin_app_sharelinkwhitelist', {'p': index}) }}">
                    {{ index }}{% if page == index %} <span class="sr-only">(current)</span>{% endif %}
                </a>
            </li>
        {% endfor %}
    </ul>

    <!-- Create Item -->
    <div class="modal fade" id="create_item" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">创建白名单</h4>
                </div>
                <form role="form" method="post" action="{{ path('lychee_admin_app_addsharelink') }}">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="网站名称">
                        </div>
                        <div class="form-group">
                            <label for="domain">域名</label>
                            <input type="text" class="form-control" id="domain" name="domain" placeholder="demo.com">
                        </div>
                        <div class="form-group">
                            <label for="type">类型</label>
                            <select name="type" id="type" class="form-control">
                                {% for name, id in types %}
                                    <option value="{{ id }}">{{ name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">确 定</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .nav-tabs { margin-bottom: 10px; }
    </style>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $(".remove-domain").bind("click", function () {
                if (!confirm("确认删除？")) {
                    return false;
                }
                var $form = $('<form></form>');
                $form.attr("action", "{{ path('lychee_admin_app_removesharelink') }}");
                $form.attr("method", "post");
                $form.attr("target", "_self");
                var $input = $("<input type='text' name='id'>");
                $input.val($(this).data("domain-id"));
                $form.append($input);
                $(document.body).append($form);
                $form.submit();

                return false;
            });
        });
    </script>
{% endblock %}