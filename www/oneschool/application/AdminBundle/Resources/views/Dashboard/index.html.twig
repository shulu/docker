{% block javascripts %}
    <script type="application/javascript">
        $(document).ready(function () {
            function updateNewestTopics() {
                var $newestTopics = $('#newest_topics');
                var newestTopicId = $newestTopics.find('.newest-topic:first').data('tid');
                $.ajax("{{ path('lychee_admin_dashboard_getnewesttopics') }}", {
                    type: 'get',
                    dataType: 'json',
                    data: {
                        topic_id: newestTopicId
                    },
                    success: function(data) {
                        if (data.topics && data.topics.length > 0) {
                            var html = '';
                            var topicCount = 0;
                            for (topicKey in data.topics) {
                                var topic = data.topics[topicKey];
                                console.log(topic.indexImageUrl);
                                html += '<article class="media event newest-topic" data-tid="' + topic.id + '"> \
                                        <a class="pull-left date topic-img"> \
                                        <img src="' + topic.indexImageUrl + '" alt=""> \
                                        </a> \
                                        <div class="media-body"> \
                                        <a class="title" href="#">' + topic.title + '</a> \
                                        <p>' + topic.description + '</p> \
                                        </div> \
                                        </article>';
                                topicCount += 1;
                            }
                            var $newestTopicsList = $newestTopics.find('article');
                            var $deleteTopics = $newestTopicsList.slice($newestTopicsList.length - topicCount);
                            for (var i in $deleteTopics) {
                                $deleteTopics.eq(i).remove();
                            }
                            $newestTopics.find('article:first').before(html);
                        }
                    },
                    error: function() {}
                });
                setTimeout(arguments.callee, 60000);
            }
            updateNewestTopics();

            function updateTodayUsers() {
                var $todayUsers = $('#today_users');
                $.ajax("{{ path('lychee_admin_dashboard_gettodayusers') }}", {
                    type: 'get',
                    dataType: 'json',
                    success: function(data) {
                        if (data.users && data.users.length > 0) {
                            var html = '';
                            for (var i in data.users) {
                                var user = data.users[i];
                                html += '<article class="media event" data-tid="' + user.id + '"> \
                                        <a class="pull-left date topic-img"> \
                                        <img src="' + user.avatarUrl + '" alt=""> \
                                        </a> \
                                        <div class="media-body"> \
                                        <a class="title" href="#">' + user.nickname + '</a> \
                                        <p>发帖量: ' + user.post_count + '</p> \
                                        </div> \
                                        </article>';
                            }
                            $todayUsers.find('article').remove();
                            $todayUsers.html(html);
                        }
                    },
                    error: function() {}
                });
                setTimeout(arguments.callee, 1000 * 60 * 5);
            }
            setTimeout(updateTodayUsers, 1000 * 60 * 5);
        });
    </script>
