{% extends 'LycheeAdminBundle:ManualIntervention:liveTemplate.html.twig' %}

{% block list %}
    <button type="button" id="create_inke_btn" class="btn btn-primary" data-toggle="modal" data-target="#create_item_form">
        <span class="glyphicon glyphicon-plus"></span>
    </button>
    <div class="pull-right date-search">
        <form class="form-inline">
            <div class="form-group">
                <label class="sr-only">直播ID</label>
                <input type="text" class="form-control" placeholder="直播ID" name="uid" id="uid" value="{{ app.request.get('uid')|default('') }}">
            </div>
            <button type="submit" class="btn btn-default">查 询</button>
        </form>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <td>主播ID</td>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            {% if items | length > 0 %}
                {% for item in items %}
                    <tr>
                        <td>{{ item.inkeUid }}</td>
                        <td>
                            {% if item.top %}
                                <span>已置顶</span>
                                <button class="btn btn-default cancel-stick" data-item-id="{{ item.inkeUid }}">取消置顶</button>
                            {% else %}
                                <button class="btn btn-default stick" data-item-id="{{ item.inkeUid }}">置顶</button>
                            {% endif %}
                            <button class="btn btn-danger delete-item" data-item-id="{{ item.inkeUid }}">
                                <span class="glyphicon glyphicon-trash"></span>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
    <nav>
        <ul class="pagination">
            <li>
                <a href="{{ path('lychee_admin_manualintervention_liverecommendationinke', {page: 1}) }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {% if pageCount < 1 %}{% set pageCount = 1 %}{% endif %}
            {% for p in 1..min(10, pageCount) %}
                <li class="{{ p==page? 'active' }}">
                    <a href="{{ path('lychee_admin_manualintervention_liverecommendationinke', {page: p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
            <li>
                <a href="{{ path('lychee_admin_manualintervention_liverecommendationinke', {page: pageCount}) }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
    <!-- Modal -->
    <div class="modal fade" id="create_item_form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">添加映客直播推荐</h4>
                </div>
                <form role="form" method="post" action="{{ path('lychee_admin_manualintervention_createliverecommendationinke') }}">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="inke_uid">主播ID(只能填数字)</label>
                            <input type="text" name="inke_uid" id="inke_uid" class="form-control" value="">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="launched">马上发布</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $(".delete-item").click(function () {
                if (confirm("确认删除？")) {
                    var id = $(this).data("item-id");
                    var $form = $('<form method="POST"></form>');
                    $form.attr("action", "{{ path('lychee_admin_manualintervention_deleteliverecommendationinke') }}");
                    $form.append('<input type="hidden" name="id" value="' + id + '">');
                    $form.append(
                            '<input type="hidden" name="callback_url" ' +
                            'value="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">'
                    );
                    $(document.body).append($form);
                    $form.submit();
                }

                return false;
            });
            function IsNumbers(val) {
                return /^\d*$/.test(val);
            }
            $('#launched').click(function(e) {
                var val = $('#inke_uid').val();
                if(!IsNumbers(val)) {
                    alert("主播ID只能填数字");
                    e.preventDefault();
                }
                if(val == '') {
                    alert('id不能为空');
                    e.preventDefault();
                }

            });
            function stick(id, top) {
                var $form = $('<form method="post"></form>');
                $form.attr('action', '{{ path("lychee_admin_manualintervention_stickliverecommendationinke") }}');
                $form.append('<input type="hidden" name="id" value="' + id + '">');
                $form.append('<input type="hidden" name="top" value="' + top + '">');
                $(document.body).append($form);
                $form.submit();
            }
            $('.stick').click(function () {
                var id= $(this).data('item-id');
                var top = 1;
                stick(id, top);
            });
            $('.cancel-stick').click(function () {
                var id= $(this).data('item-id');
                var top = 0;
                stick(id, top);
            });
        });
    </script>
{% endblock %}