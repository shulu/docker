{% extends 'LycheeAdminBundle:ManualIntervention:postTemplate.html.twig' %}

{% block list %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>ID</td>
                    <th>作者</th>
                    <th>推荐帖子/推荐语</th>
                    <th>推荐时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
            {% for item in items %}
                {% set user = users[posts[item.getTargetId()].authorId] %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>
                        <img src="{{ user.avatarUrl }}" alt="user-{{ user.id }}" width="50px" height="50px"/>
                        <a href="/user_management/detail/{{ user.id }}" target="_blank">
                            {% if user.nickname %}{{ user.nickname }}{% else %}[{{ user.id }}]{% endif %}
                        </a>
                    </td>
                    <td>
                        [<a href="{{ path('lychee_admin_contentaudit_postdetail', {id: item.getTargetId()}) }}" target="_blank">
                            {{ item.targetId }}
                        </a>]<br />
                        {{ item.getReason() }}
                    </td>
                    <td>{{ item.createTime|date('Y-m-d H:i') }}</td>
                    <td>
                        {% if item.sticky == 1 %}
                            <button type="button" class="btn btn-default cancel-sticky" data-id="{{ item.id }}">
                                取消置顶
                            </button>
                        {% endif %}
                        <button class="btn btn-danger delete-item" data-item-id="{{ item.getId() }}">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <nav>
            <ul class="pagination">
                <li>
                    <a href="{{ path('lychee_admin_manualintervention_postrecommendation') }}" aria-label="Previous">
                        <span aria-hidden="true">&lt; 首页</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('lychee_admin_manualintervention_postrecommendation', {cursor: nextCursor}) }}" aria-label="Next">
                        <span aria-hidden="true">下一页 &gt;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $(".delete-item").click(function () {
                if (confirm("确认删除？")) {
                    var id = $(this).data("item-id");
                    var $form = $('<form method="POST"></form>');
                    $form.attr("action", "{{ path('lychee_admin_manualintervention_deleterecommendation') }}");
                    $form.append('<input type="hidden" name="id" value="' + id + '">');
                    $form.append(
                            '<input type="hidden" name="callback_url" ' +
                            'value="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">'
                    );
                    $(document.body).append($form);
                    $form.submit();
                }

                return false;
            });
            $('.cancel-sticky').click(function() {
                if (!confirm("确定取消置顶?")) {
                    return false;
                }
                var itemId = $(this).data('id');
                var $form = $('<form method="post"></form>');
                $form.attr('action', "{{ path('lychee_admin_manualintervention_cancelstickyitem') }}");
                $form.append('<input type="hidden" name="id" value="' + itemId + '">');
                $(document.body).append($form);
                $form.submit();
            });
        });
    </script>
{% endblock %}