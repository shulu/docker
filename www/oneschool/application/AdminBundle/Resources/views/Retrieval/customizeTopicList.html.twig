{% extends 'LycheeAdminBundle:Retrieval:layout.html.twig' %}
{% import 'LycheeAdminBundle::helper.html.twig' as helper %}

{% block body %}
    {{ helper.retrievalCustomizeContentNavs(type) }}
    <button type="button" class="btn btn-primary pull-left add-topic-btn" data-toggle="modal" data-target="#create_customize_topic">
        <span class="glyphicon glyphicon-plus"></span>
    </button>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>ID</th>
                <th>标题</th>
                <th>创建时间</th>
                <th>帖子数量</th>
                <th>用户量</th>
                <th>角标</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody id="topic_tbody">
            {% for tid in topicIds %}
                {% set topic = topics[tid] %}
                <tr class="{{ topic.deleted? 'danger' }}">
                    <td><a href="{{ path('lychee_admin_topic_detail', {topicId: topic.id}) }}" target="_blank">{{ topic.id }}</a></td>
                    <td>{{ topic.title }}</td>
                    <td>{{ topic.createTime|date('Y-m-d H:i') }}</td>
                    <td>{{ topic.postCount }}</td>
                    <td>{{ topic.followerCount }}</td>
                    <td>{{ topic.opMark }}</td>
                    <td>{{ topic.deleted? '已删除':'活跃' }}</td>
                    <td>
                        {% if not topic.deleted %}
                            <button type="button" class="btn btn-danger remove-customize-content" data-id="{{ customizeContent[tid].id }}">
                                <span class="glyphicon glyphicon-trash"></span>
                            </button>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <nav>
        <ul class="pagination">
            <li>
                <a href="{{ path('lychee_admin_retrieval_customizetopiclist', {page: 1}) }}"
                   aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {% for p in 1..pageCount %}
                <li class="{{ p==page? 'active' }}">
                    <a href="{{ path('lychee_admin_retrieval_customizetopiclist', {page: p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
            <li>
                <a href="{{ path('lychee_admin_retrieval_customizetopiclist', {page: pageCount}) }}"
                   aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
    <!-- Modal -->
    <div class="modal fade" id="create_customize_topic" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">添加自定义次元</h4>
                </div>
                <form role="form" method="post" action="{{ path('lychee_admin_retrieval_addcustomizecontent') }}">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="creator">次元ID</label>
                            <input type="text" class="form-control" name="id">
                            <input type="hidden" name="type" value="{{ type }}">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">确 定</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .add-topic-btn {
            margin-bottom: 15px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('.remove-customize-content').click(function() {
                if (!confirm('确定移除自定义次元?')) {
                    return false;
                }
                var $form = $('<form method="post"></form>');
                $form.attr('action', '{{ path("lychee_admin_retrieval_removecustomizecontent") }}');
                $form.append('<input type="hidden" name="id" value="' + $(this).data('id') + '">');
                $('body').append($form);
                $form.submit();
            });
        });
    </script>
{% endblock %}